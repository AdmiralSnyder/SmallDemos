<Window x:Class="WpfGraphControl.PizzaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfGraphControl"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="PizzaWindow"
        Width="800" Height="450" mc:Ignorable="d">
    <StackPanel>
        <CheckBox x:Name="SalamiCB" Tag="3">Salami</CheckBox>
        <CheckBox x:Name="TunaCB" Tag="5">Tuna</CheckBox>
        <CheckBox x:Name="CheeseCB" Tag="2">Moooore Cheeeze</CheckBox>
        <RadioButton x:Name="BigRB" Tag="10">Big</RadioButton>
        <RadioButton x:Name="BiggerRB" Tag="15">Bigger</RadioButton>
        <RadioButton x:Name="HungryRB" Tag="20">Hungry</RadioButton>
        <TextBlock>Price</TextBlock>
        <TextBlock x:Name="PriceTB" />
    </StackPanel>
</Window>
